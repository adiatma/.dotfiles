" Turn on wrap line visualy
set nowrap

" OSX stupid backspace fix
set backspace=indent,eol,start

" Turn on relativenumbers
set relativenumber

" Set Proper Tabs
set tabstop=2
set shiftwidth=4
set smarttab
set expandtab

" Always display the status line
set laststatus=2

" Enable Elite mode, No ARRRROWWS!!!!
let g:elite_mode=1

" Enable highlighting of the current line
set cursorline

